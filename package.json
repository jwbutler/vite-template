{
  "name": "vite-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "A Vite + TypeScript template, intended for easy project scaffolding",
  "scripts": {
    "run:client": "vite -c client/vite.config.ts",
    "run:server": "node --experimental-specifier-resolution=node --loader ts-node/esm ./server/src/main.ts",
    "generate:zod": "ts-to-zod server/src/types.ts server/src/gen-zod/types.ts",
    "build": "tsc && vite build",
    "lint": "eslint {client,server}/src/**/*.ts",
    "lint:fix": "eslint --fix {client,server}/src/**/*.ts",
    "preview": "vite preview",
    "test": "vitest"
  },
  "dependencies": {
    "@trpc/client": "^11.0.0-rc.467",
    "@trpc/server": "^11.0.0-rc.467",
    "cors": "^2.8.5",
    "ts-node": "^10.9.2",
    "ts-to-zod": "^3.9.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/node": "^20.12.4",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.1.3",
    "stylelint": "^16.3.1",
    "typescript": "^5.4.3",
    "vite": "^5.2.8",
    "vite-plugin-checker": "^0.6.4",
    "vitest": "^1.4.0"
  }
}
